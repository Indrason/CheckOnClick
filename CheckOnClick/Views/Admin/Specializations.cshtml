    $(document).ready(function () {
        $("#table_specialization").DataTable({
            "ajax": {
                type: "GET",
                url: "/Admin/ShowSpec",
                dataType: "json",
                contentType: "application/json"
            },
            "columns": [
                { "data": "SPEC_ID" },
                { "data": "SPEC_Name" },
                { "data": "Active" },]


        });
    });

    $('#saveSpec').click(function () {
        var valid = true;
        if ($('#NewSPEC_NAME').val() == '') {
            valid = false;
        }
        else {
            var data = {
                "NewSPEC_Name": $('#NewSPEC_Name').val()
            };
        }
        $.ajax({
            type: "POST",
            url: "/Admin/AddSpec",
            dataType: "json",
            contentType: "application/json",
            data: JSON.stringify(data),
            success: function (result) {
                if (result == "exists") {
                    alert('Already there');
                }
                else if (result == "success") {
                    alert('Role Added');
                }

                location.reload(true);

            },
            error: function (result) {
                alert('error');
            }


        })

    });
</script>