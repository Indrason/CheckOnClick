@{
    ViewBag.Title = "Specializations";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="form-grids row widget-shadow" data-example-id="basic-forms">
    <div class="form-title">
        <h4><b>Specialization</b></h4>
    </div>


    <div class="form-body">
        <div class="table-responsive">
            <table class="table" id="table_specialization">
                <thead class="bg-info">
                    <tr>
                        <td>Specialization ID</td>
                        <td>Specialization Name</td>
                        <td>Action</td>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Cardiologist</td>
                        <td>
                            <button type="button" class="btn  btn-danger" name="admin_remove_specialization"><i class="fa fa-times"></i> Remove</button>
                        </td>

                    </tr>
                    <tr>
                        <td>2</td>
                        <td>
                            Neurologist
                        </td>
                        <td>
                            <button type="button" class="btn  btn-danger" name="admin_remove_specialization"><i class="fa fa-times"></i> Remove</button>
                        </td>

                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Dentist</td>
                        <td>
                            <button type="button" class="btn  btn-danger" name="admin_remove_specialization"><i class="fa fa-times"></i> Remove</button>
                        </td>

                    </tr>
                </tbody>
            </table>
        </div>
        .
        <div class="row">

            <div class="row form-group">
                <div class="col-md-4">
                    <button type="button" class="btn btn-block btn-primary" name="admin_add_specialization" data-toggle="modal" data-target="#addspecialization"><i class="fa fa-edit"></i> Add Specialization</button>
                </div>

            </div>
        </div>


        <!-- Modal -->
        <div class="modal fade" id="addspecialization" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Specialization</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row form-group">
                            <div class="col-md-5">
                                <label class="control-label">Enter Specialization Name</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="specializationname" value="" placeholder="Enter specialization Name">
                            </div>
                        </div>
                    
                        <div class="row">
                            <div class="col-md-6">
                                <button type="button" class="btn btn-primary">Add Specialization</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal Close-->
            
    </div>
</div>

</div>

<script>
        $(document).ready(function () {
            $("#table_specialization").DataTable();
        });
</script>