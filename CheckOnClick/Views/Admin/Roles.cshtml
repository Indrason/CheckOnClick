@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="form-grids row widget-shadow" data-example-id="basic-forms">
    <div class="form-title">
        <h4><b>Roles</b></h4>
    </div>


    <div class="form-body">
        <div class="table-responsive">
            <table class="table" id="table_roles">
                <thead class="bg-info">
                    <tr>
                        <td>Role ID</td>
                        <td>Role Name</td>
                        <td>Action</td>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Doctor</td>
                        <td>
                            <button type="button" class="btn  btn-danger" name="admin_add_specialization_role"><i class="fa fa-times"></i> Remove</button>
                        </td>

                    </tr>
                </tbody>
            </table>
        </div>
        .
        <div class="row">
            <div class="col-md-4">
                <button type="button" class="btn btn-block btn-primary" name="admin_add_role" data-toggle="modal" data-target="#addRole"><i class="fa fa-edit"></i> Add Role</button>
            </div>
        </div>


        <!-- Modal -->
        <div class="modal fade" id="addRole" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Role</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row form-group">
                            <div class="col-md-4">
                                <label class="control-label">Enter Role Name</label>
                            </div>  
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="rolename" value="" placeholder="Enter Role Name" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <button type="button" class="btn btn-primary">Add Role</button>
                            </div>               
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal Close-->
        </div>

        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("#table_roles").DataTable();
        });
    </script>
