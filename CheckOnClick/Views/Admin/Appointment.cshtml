@{
    ViewBag.Title = "Pending Appointment";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="form-grids row widget-shadow" data-example-id="basic-forms">
    <div class="form-title">
        <h4>Pending Appointments</h4>
    </div>
    <div class="form-body">
        <div id="abc" class="table-responsive">
            <table class="table" id="table_appoint">
                <thead class="bg-info">
                    <tr>
                        <th>Appointment ID</th>
                        <th>Doctor Name</th>
                        <th>Patient Name</th>
                        <th>Schedule Date/Time</th>
                        <th>Booked Date/Time</th>
                        <th>Appointment Description</th>
                        <th>Status</th>

                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

</div>

<script>
    $(document).ready(function () {


        $.get('/Admin/ShowFreshAppointment', function (data) {

            data = JSON.parse(data);
            var rows = "";
            $.each(data.Table, function (i, v1) {
                rows += '<tr><td>' + v1.APPOINT_ID + '</td><td> Dr. ' + v1.STAFF_NAME + '</td><td>' + v1.PATIENT_NAME + '</td><td>' + v1.SCHEDULE_DATE + ' ' + v1.SCHEDULE_TIME + '</td><td>' + v1.BOOKED_DATE + '</td><td>' + v1.APPOINT_DESC + '</td><td>' + v1.APPOINT_STATUS + '</td></tr>';
            });

            $('#table_appoint tbody').html(rows);
            $("#table_appoint").DataTable();
        });

    });
</script>