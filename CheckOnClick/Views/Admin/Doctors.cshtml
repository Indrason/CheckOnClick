@model CheckOnClick.Models.Staffs
@{
    ViewBag.Title = "Doctors";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="form-grids row widget-shadow" data-example-id="basic-forms">
    <div class="form-title">
        <h4>Doctors</h4>
    </div>
    <div class="form-body">
        <div class="table-responsive">
            <table class="table" id="table_doctors">
                <thead class="bg-info">
                    <tr>
                        <th>Doctor ID</th>
                        <th>Doctor Name</th>
                        <th>Specialization</th>
                        <th>Qualification</th>
                        <th>Date of Birth</th>
                        <th>Gender</th>
                        <th>Blood Group</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Country</th>
                        <th>Pin</th>
                        <th>Acnt_Date</th>
                        <th>Active</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div class="row">
            <div class="col-md-4">
                <button type="button" class="btn btn-block btn-primary" name="admin_add_doctor" data-toggle="modal" data-target="#addDoctor"><i class="fa fa-edit"></i> Add Doctor</button>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="addDoctor" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h5 class="modal-title" id="exampleModalLabel">Add Doctor</h5>

                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="row form-group">
                                <div class="col-md-3">
                                    <label for="Staff_Name">Full Name</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.TextBoxFor(a => a.Staff_Name, new { @class = "form-control", @placeholder = "Full Name" })
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-3">
                                    <label for="Staff_Spec">Specialization</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.DropDownList("Specs", null, "-- Select the Specialization --", new { @class = "form-control", @id = "Staff_Spec_Id" })


                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-3">
                                    <label for="Staff_Qualification">Qualification</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.TextBoxFor(a => a.Staff_Qualification, new { @class = "form-control", @placeholder = "Qualification" })
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-3">
                                    <label for="Staff_Gender">Gender</label>
                                </div>
                                <div class="col-md-3">
                                    @Html.RadioButtonFor(a => a.Staff_Gender, "Male") <label>Male</label>

                                </div>
                                <div class="col-md-3">
                                    @Html.RadioButtonFor(a => a.Staff_Gender, "Female") <label>Female</label>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-3">
                                    <label for="Staff_DOB">Date of Birth</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.TextBoxFor(a => a.Staff_DOB_IN, new { @class = "form-control", @placeholder = "Date of Birth", @type = "date" })
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-3">
                                    <label for="Staff_BloodGroup">Blood Group</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.TextBoxFor(a => a.Staff_BloodGroup, new { @class = "form-control", @placeholder = "Blood Group" })
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-3">
                                    <label for="Staff_Email">Email</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.TextBoxFor(a => a.Staff_Email, new { @class = "form-control", @placeholder = "Email", @type = "email" })
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-3">
                                    <label for="Staff_Contact">Contact</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.TextBoxFor(a => a.Staff_Contact, new { @class = "form-control", @placeholder = "Contact Number" })
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-3">
                                    <label for="Staff_City">Address: City</label>
                                </div>
                                <div class="col-md-3">

                                    @Html.TextBoxFor(a => a.Staff_City, new { @class = "form-control", @placeholder = "City" })
                                </div>
                                <div class="col-md-2">
                                    <label for="Staff_State">State</label>
                                </div>
                                <div class="col-md-4">

                                    @Html.TextBoxFor(a => a.Staff_State, new { @class = "form-control", @placeholder = "State" })
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-3">
                                    <label for="Staff_Country">Country</label>
                                </div>
                                <div class="col-md-3">

                                    @Html.TextBoxFor(a => a.Staff_Country, new { @class = "form-control", @placeholder = "Country" })
                                </div>
                                <div class="col-md-2">
                                    <label for="Staff_Pin">Pin</label>
                                </div>
                                <div class="col-md-4">

                                    @Html.TextBoxFor(a => a.Staff_Pin, new { @class = "form-control", @placeholder = "Pin" })
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-3"></div>
                                <div class="col-md-9">
                                    <span id="err_doc" style="font-size:12px; color:red;"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <button type="button" class="btn btn-primary" id="btnAddDoctor">Add Doctor</button>
                                </div>
                            </div>
                        </form>


                    </div>

                </div>
            </div>
        </div>
        <!-- Model close-->
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#table_doctors").DataTable({
            "ajax": {
                type: "GET",
                url: "/Admin/ShowDoctors",
                dataType: "json",
                contentType: "application/json"
            },
            "columns": [
                { "data": "Staff_ID" },
                { "data": "Staff_Name" },
                { "data": "Staff_Spec" },
                { "data": "Staff_Qualification" },
                { "data": "Staff_DOB" },
                { "data": "Staff_Gender" },
                { "data": "Staff_BloodGroup" },
                { "data": "Staff_Email" },
                { "data": "Staff_Contact" },
                { "data": "Staff_City" },
                { "data": "Staff_State" },
                { "data": "Staff_Country" },
                { "data": "Staff_Pin" },
                { "data": "Staff_Acnt_Date" },
                { "data": "Active" },
            ]
        });

        $('#btnAddDoctor').click(function () {
            var valid = true;
            if ($('#Staff_Name').val() == "") {
                valid = false;
            }
            if ($('#Staff_Spec_Id').val() == 0) {
                valid = false;
            }
            if ($('#Spec_Qualification').val() == "") {
                valid = false;
            }
            if ($('#Staff_Gender:checked').val() == null) {
                valid = false;
            }
            if ($('#Staff_DOB_IN').val() == "") {
                valid = false;
            }
            if ($('#Staff_BloodGroup').val() == "") {
                valid = false;
            }
            if ($('#Staff_Email').val() == "") {
                valid = false;
            }
            if ($('#Staff_Contact').val() == "") {
                valid = false;
            }
            if ($('#Staff_City').val() == "") {
                valid = false;
            }
            if ($('#Staff_State').val() == "") {
                valid = false;
            }
            if ($('#Staff_Country').val() == "") {
                valid = false;
            }
            if ($('#Staff_Pin').val() == "") {
                valid = false;
            }

            if (valid == false) {
                $('#err_doc').text('* Please fill all the fields !');
            }
            else {
                $('#err_doc').text('');
                var data = {
                    "Staff_Name": $('#Staff_Name').val(),
                    "Staff_Spec_Id": $('#Staff_Spec_Id option:selected').val(),
                    "Staff_Qualification": $('#Staff_Qualification').val(),
                    "Staff_Gender": $('#Staff_Gender:checked').val(),
                    "Staff_DOB_IN": $('#Staff_DOB_IN').val(),
                    "Staff_BloodGroup": $('#Staff_BloodGroup').val(),
                    "Staff_Email": $('#Staff_Email').val(),
                    "Staff_Contact": $('#Staff_Contact').val(),
                    "Staff_City": $('#Staff_City').val(),
                    "Staff_State": $('#Staff_State').val(),
                    "Staff_Country": $('#Staff_Country').val(),
                    "Staff_Pin": $('#Staff_Pin').val()
                };

                $.ajax({
                    type: "POST",
                    url: "/Admin/AddDoctor/",
                    dataType: "json",
                    contentType: "application/json",
                    data: JSON.stringify(data),
                    success: function (result) {
                        if (result == "email") {
                            swal('Warning', 'Doctor already exists !', 'warning');
                        }
                        else if (result == "error") {
                            swal('Error', 'Problem adding the dcotor !', 'error');
                        }
                        else {
                            //alert('Doctor successfully added with ID: ' + result + ' And Password: 123456');
                            swal('Success', 'Doctor successfully added with ID: ' + result + ' And Password: 123456', 'success')
                                .then((value) => {
                                    location.reload(true);
                                });
                        }
                    },

                    error: function (result) {
                        swal('Error', 'Something went wrong, Please try again !', 'error');
                    }
                });
            }
        });
    });
</script>