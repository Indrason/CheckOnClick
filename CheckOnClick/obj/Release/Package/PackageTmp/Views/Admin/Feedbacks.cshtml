@model CheckOnClick.Models.Feedback
@{
    ViewBag.Title = "Feedbacks";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="form-grids row widget-shadow" data-example-id="basic-forms">
    <div class="form-title">
        <h4>Feedback List</h4>
    </div>
    <div class="form-body">
        <div class="table-responsive">
            <table class="table" id="table_feedback">
                <thead class="bg-info">
                    <tr>
                        <td>Feedback ID</td>
                        <td>Patient ID</td>
                        <td>Patient Name</td>
                        <td>Doctor ID</td>
                        <td>Doctor Name</td>
                        <td>Feedback Desc</td>
                        <td>Rating</td>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

</div>

<script>
    $(document).ready(function () {
        $("#table_feedback").DataTable({
            "ajax": {
                type: "GET",
                url: "/Admin/ShowFeedback",
                dataType: "json",
                contentType: "application/json"
            },
            "columns": [
                { "data": "FDBK_ID" },
                { "data": "PATIENT_USERNAME" },
                { "data": "PATIENT_NAME" },
                { "data": "DOCTOR_ID" },
                { "data": "DOCTOR_NAME" },
                { "data": "FBDK_DESC" },
                { "data": "RATING" },]


        });
    });
</script>