    $('#addNewPatient').click(function () {
        var valid = true;
        if ($('#PATIENT_NAME').val() == "") {
            valid = false;
        }
        if ($('#PATIENT_USERNAME').val() == "") {
            valid = false;
        }
        if ($('#PATIENT_EMAIL').val() == "") {
            valid = false;
        }
        if ($('#PATIENT_GENDER:checked').val() == null) {
            valid = false;
        }
        if ($('#PATIENT_CONTACT').val() == "") {
            valid = false;
        }
        if ($('#PATIENT_BloodGP').val() == "") {
            valid = false;
        }
        if ($('#PATIENT_CITY').val() == "") {
            valid = false;
        }
        if ($('#PATIENT_STATE').val() == "") {
            valid = false;
        }
        if ($('#PATIENT_COUNTRY').val() == "") {
            valid = false;
        }
        if ($('#PATIENT_PIN').val() == "") {
            valid = false;
        }
        if ($('#PATIENT_DOB').val() == "") {
            valid = false;
        }

        if (valid == false) {
            alert('Please fill all the fields !');
        }
        else {
            var data = {
                "PATIENT_NAME": $('#PATIENT_NAME').val(),
                "PATIENT_USERNAME": $('#PATIENT_USERNAME').val(),
                "PATIENT_EMAIL": $('#PATIENT_EMAIL').val(),
                "PATIENT_GENDER": $('#PATIENT_GENDER:checked').val(),
                "PATIENT_CONTACT": $('#PATIENT_CONTACT').val(),
                "PATIENT_DOB_IN": $('#PATIENT_DOB_IN').val(),
                "PATIENT_BLOODGP": $('#PATIENT_BLOODGP').val(),
                "PATIENT_CITY": $('#PATIENT_CITY').val(),
                "PATIENT_STATE": $('#PATIENT_STATE').val(),
                "PATIENT_COUNTRY": $('#PATIENT_COUNTRY').val(),
                "PATIENT_PIN": $('#PATIENT_PIN').val()
                // "Staff_Pin": $('#Staff_Pin').val()
            };

            $.ajax({
                type: "POST",
                url: "/Admin/AddPatient/",
                dataType: "json",
                contentType: "application/json",
                data: JSON.stringify(data),
                success: function (result) {
                    if (result == "email") {
                        alert('Patient Email is already exist !');
                    }
                    else if (result == "username") {
                        alert('Patient username is already exist !');
                    }
                    else if (result == "error") {
                        alert('Problem adding the doctor');
                    }
                    else {
                        alert('Patient successfully added with UserName: ' + result + ' And Password: 123456');
                    }

                    location.reload(true);
                },

                error: function (result) {
                    alert('Some error occurred! Please try again!');
                }
            });
        }
    });


</script>