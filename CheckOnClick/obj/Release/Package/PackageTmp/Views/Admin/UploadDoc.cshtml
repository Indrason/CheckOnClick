
@{
    ViewBag.Title = "Upload Documents";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    if (ViewBag.PicUpStatus != null)
    {
        if (ViewBag.PicUpStatus == "saved")
        {
            <script>alert('Successfully Updated !');</script>

        }
        else if (ViewBag.PicUpStatus == "notSaved")
        {
            <script>alert('Failed to update, Please try again !');</script>
        }
    }
}

<div class="form-grids row widget-shadow" data-example-id="basic-forms">
    <div class="form-title">
        <h4>Upload documents</h4>

    </div>
    <div class="form-body" id="table_query">

        <form method="post" action="@Url.Action("UploadDoc","Admin")" enctype="multipart/form-data" onsubmit="return validatePic()">
            <div class="row">
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-4">
                            <label>Update Profile Picture</label>
                        </div>
                        <div class="col-md-8">
                            <input type="file" accept=".jpg, .png, .jpeg" name="profile_pic" id="profile_pic" />
                            <p style="font-size:12px">Max Size: 500KB. <span id="err_pic" style="color: red"></span></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <button type="submit" class="btn btn-primary form-control">Upload</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-12">
                            <label>Current Profile Picture</label>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <img src="@ViewBag.GetImgLink" height="150" width="150" style="border-radius: 20%" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

<script type="text/javascript">
    function validatePic() {
        var valid = true;
        var file2 = document.getElementById('profile_pic');
        if (file2.value == "") {
            $('#err_pic').text('');
            $('#err_pic').text('* Please choose an image !');
            valid = false;
        }
        else {
            var fSize = file2.files[0].size;
            if (fSize > 500000) {
                $('#err_pic').text('');
                $('#err_pic').text('* File too large !');
                valid = false;
            }
        }

        return valid;
    }
</script>


